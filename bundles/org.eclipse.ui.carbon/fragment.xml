<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<fragment
   id="org.eclipse.ui.carbon"
   name="%fragmentName"
   version="3.0"
   provider-name="%providerName"
   plugin-id="org.eclipse.ui.ide"
   plugin-version="3.0"
   match="compatible">

   <runtime>
      <library name="carbon.jar">
         <export name="*"/>
      </library>
   </runtime>

   <requires>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.ui"/>
   </requires>

   <extension point="org.eclipse.ui.startup">
		<class class="org.eclipse.ui.carbon.CarbonUIEnhancer"/>
		<startup class="org.eclipse.ui.carbon.CarbonUIEnhancer"/>
   </extension>
   
</fragment>
